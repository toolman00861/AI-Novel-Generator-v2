<UserControl x:Class="AINovelStudio.Views.AIGenerationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid Margin="20" Opacity="0">
        <Grid.RenderTransform>
            <TranslateTransform Y="24"/>
        </Grid.RenderTransform>
        <Grid.Triggers>
            <EventTrigger RoutedEvent="Loaded">
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                         To="1"
                                         Duration="{StaticResource NormalDuration}"
                                         EasingFunction="{StaticResource EaseInOut}"/>
                        <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(TranslateTransform.Y)"
                                         To="0"
                                         Duration="{StaticResource NormalDuration}"
                                         EasingFunction="{StaticResource EaseOut}"/>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Grid.Triggers>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 页面标题 -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="✨ AI 文本生成" Style="{StaticResource TitleStyle}"/>
            <TextBlock Text="选择合适的模式与上下文，快速生成高质量片段"
                       Style="{StaticResource SecondaryTextStyle}" Margin="0,4,0,0"/>
        </StackPanel>

        <!-- 功能选择区域 -->
        <Border Grid.Row="1" Style="{StaticResource CardStyle}" Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="选择生成类型" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,15"/>
                
                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                    <RadioButton x:Name="ContinueWritingRadio" Content="续写" GroupName="GenerationType" 
                               IsChecked="{Binding IsContinueWritingSelected}" Margin="0,0,20,0"/>
                    <RadioButton x:Name="RewriteRadio" Content="改写" GroupName="GenerationType" 
                               IsChecked="{Binding IsRewriteSelected}" Margin="0,0,20,0"/>
                    <RadioButton x:Name="OutlineRadio" Content="大纲生成" GroupName="GenerationType" 
                               IsChecked="{Binding IsOutlineSelected}"/>
                </StackPanel>

                <!-- 供应商选择 -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="AI供应商：" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <ComboBox ItemsSource="{Binding Providers}" SelectedItem="{Binding SelectedProvider}" 
                            MinWidth="200" Style="{StaticResource ModernComboBoxStyle}" TextSearch.TextPath="Name">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Name}" FontWeight="SemiBold" Margin="0,0,8,0"/>
                                    <TextBlock Text="{Binding Vendor, StringFormat='({0})'}" Foreground="Gray"/>
                                </StackPanel>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>

                <!-- 小说选择 -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="选择小说：" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <ComboBox ItemsSource="{Binding Novels}" SelectedItem="{Binding SelectedNovel}" 
                            MinWidth="200" Style="{StaticResource ModernComboBoxStyle}" TextSearch.TextPath="Title">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Title}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>

                <!-- 章节选择（续写和改写时显示） -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10"
                          Visibility="{Binding IsChapterSelectionVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <TextBlock Text="选择章节：" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <ComboBox ItemsSource="{Binding Chapters}" SelectedItem="{Binding SelectedChapter}" 
                            MinWidth="200" Style="{StaticResource ModernComboBoxStyle}" TextSearch.TextPath="Title">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Title}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- 主要内容区域 -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 左侧：输入区域 -->
            <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- 输入标题 -->
                    <Border Grid.Row="0" Background="{StaticResource HoverBrush}" Padding="15,10">
                        <TextBlock Text="{Binding InputTitle}" Style="{StaticResource SubtitleStyle}"/>
                    </Border>

                    <!-- 输入文本框 -->
                    <TextBox Grid.Row="1" Text="{Binding InputText, UpdateSourceTrigger=PropertyChanged}" 
                           TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"
                           Padding="15" BorderThickness="0" FontSize="14"/>

                    <!-- 生成按钮和设置 -->
                    <Border Grid.Row="2" Background="{StaticResource HoverBrush}" Padding="15">
                        <StackPanel>
                            <!-- AI设置 -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <TextBlock Text="字数限制：" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <TextBox Text="{Binding WordLimit}" Width="80" Margin="0,0,20,0" Style="{StaticResource ModernTextBoxStyle}"/>
                                <TextBlock Text="创意度：" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <Slider Value="{Binding Creativity}" Minimum="0" Maximum="1" Width="140" 
                                      TickFrequency="0.1" IsSnapToTickEnabled="True" Style="{StaticResource ModernSliderStyle}"/>
                                <TextBlock Text="{Binding Creativity, StringFormat=F1}" VerticalAlignment="Center" Margin="8,0,0,0"/>
                            </StackPanel>

                            <!-- 生成按钮 -->
                            <Button Content="{Binding GenerateButtonText}" Command="{Binding GenerateCommand}" 
                                  Style="{StaticResource PrimaryButtonStyle}" HorizontalAlignment="Left" Margin="0,10,0,0"
                                  IsEnabled="{Binding CanGenerate}"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- 右侧：输出区域 -->
            <Border Grid.Column="2" Style="{StaticResource CardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- 输出标题 -->
                    <Border Grid.Row="0" Background="{StaticResource HoverBrush}" Padding="15,10">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="生成结果" Style="{StaticResource SubtitleStyle}"/>
                            <TextBlock Text="{Binding GenerationStatus}" Margin="20,0,0,0" Foreground="{Binding StatusColor}"/>
                        </StackPanel>
                    </Border>

                    <!-- 输出文本框 -->
                    <TextBox Grid.Row="1" Text="{Binding OutputText}" TextWrapping="Wrap" 
                           IsReadOnly="True" VerticalScrollBarVisibility="Auto"
                           Padding="15" BorderThickness="0" FontSize="14"
                           Background="#FAFAFA"/>

                    <!-- 操作按钮 -->
                    <Border Grid.Row="2" Background="{StaticResource HoverBrush}" Padding="15">
                        <StackPanel Orientation="Horizontal">
                            <Button Content="复制" Command="{Binding CopyCommand}" 
                                  Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,10,0"
                                  IsEnabled="{Binding HasOutput}"/>
                            <Button Content="保存到章节" Command="{Binding SaveToChapterCommand}" 
                                  Style="{StaticResource PrimaryButtonStyle}" Margin="0,0,10,0"
                                  IsEnabled="{Binding HasOutput}"/>
                            <Button Content="重新生成" Command="{Binding RegenerateCommand}" 
                                  Style="{StaticResource SecondaryButtonStyle}"
                                  IsEnabled="{Binding CanRegenerate}"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
