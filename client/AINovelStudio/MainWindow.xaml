<Window x:Class="AINovelStudio.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:AINovelStudio.ViewModels"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        mc:Ignorable="d"
        Title="AI小说工坊" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">
    
    <Grid Background="{StaticResource BackgroundBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- 侧边栏 -->
        <Border Grid.Column="0" Background="{StaticResource SurfaceBrush}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,1,0">
            <StackPanel Margin="0,20,0,0">
                <!-- 应用标题 -->
                <TextBlock Text="AI小说工作室" FontSize="20" FontWeight="Bold" 
                          Foreground="{StaticResource TextPrimaryBrush}" 
                          HorizontalAlignment="Center" Margin="0,0,0,30"/>
                
                <!-- 导航菜单 -->
                <StackPanel>
                    <Button Content="小说管理" Style="{StaticResource ModernButtonStyle}" 
                           Margin="10,5" Command="{Binding NavigateCommand}" CommandParameter="小说管理"/>
                    <Button Content="AI生成" Style="{StaticResource ModernButtonStyle}" 
                           Margin="10,5" Command="{Binding NavigateCommand}" CommandParameter="AI生成"/>
                    <Button Content="人物设计" Style="{StaticResource ModernButtonStyle}" 
                           Margin="10,5" Command="{Binding NavigateCommand}" CommandParameter="人物设计"/>
                    <Button Content="设置" Style="{StaticResource ModernButtonStyle}" 
                           Margin="10,5" Command="{Binding NavigateCommand}" CommandParameter="设置"/>
                </StackPanel>
            </StackPanel>
        </Border>
        
        <!-- 主内容区域 -->
        <Border Grid.Column="1" Background="{StaticResource BackgroundBrush}" Padding="20">
            <ContentPresenter Content="{Binding CurrentView}"/>
        </Border>
    </Grid>
</Window>
